{
  "compilerOptions": {
    "outDir": "build",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "ES2019",
    "skipLibCheck": true,
    "typeRoots": ["./types"]
  },
  "include": ["src/**/*.ts", "types/index.d.ts"],
  "exclude": ["node_modules"]
}
