{
  "name": "downplay",
  "version": "0.0.1",
  "description": "A free, self-hostable, youtube-as-a-podcast service.",
  "main": "build/server.js",
  "author": "Joseph Schultz <joseph@acupofjose.com>",
  "repository": {
    "url": "https://github.com/acupofjose/downplay"
  },
  "scripts": {
    "start": "npm run build && npm --prefix ./client run build && node .",
    "build": "npx tsc && cp src/worker-loader.js build/worker-loader.js",
    "dev": "concurrently \"nodemon\" \"npm --prefix ./client run dev\"",
    "generate:schema": "npx prisma generate && npx prisma db push"
  },
  "nodemonConfig": {
    "ext": "ts,js",
    "exec": "npm run build && node .",
    "watch": [
      "src/**/*"
    ],
    "ignore": [
      "build/*",
      "client/dist/*"
    ],
    "events": {
      "start": "cls || clear"
    }
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^2.27.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^83.0.0",
    "jsonwebtoken": "^8.5.1",
    "mime": "^2.5.2",
    "moment": "^2.29.1",
    "node-id3": "^0.2.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "podcast": "^1.3.0",
    "pubsub-js": "^1.9.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2",
    "ws": "^7.5.3",
    "youtube-dl-exec": "^1.2.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/fluent-ffmpeg": "^2.1.18",
    "@types/moment": "^2.13.0",
    "@types/node": "^16.4.3",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/podcast": "^1.3.1",
    "@types/pubsub-js": "^1.8.2",
    "@types/uuid": "^8.3.1",
    "@types/ws": "^7.4.7",
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.12",
    "prisma": "^2.27.0"
  }
}
